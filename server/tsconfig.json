{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "typeRoots": [
        "node_modules/koa-bodyparser",
        "node_modules/@types"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": ["node_modules"]
}